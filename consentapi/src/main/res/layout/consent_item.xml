<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="@dimen/consent_item_minimal_height"
    android:orientation="horizontal"
    android:padding="@dimen/consent_item_padding">

    <Switch
        android:id="@+id/consent_item_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/consent_item_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/consent_item_text_horizontal_margin"
        android:layout_marginEnd="@dimen/consent_item_text_horizontal_margin"
        android:layout_weight="1"
        tools:text="Your typical long and boring consent item text. That should be correctly displayed to user" />

    <ImageView
        android:id="@+id/consent_item_link"
        android:layout_width="@dimen/consent_item_link_icon_size"
        android:layout_height="@dimen/consent_item_link_icon_size"
        android:padding="@dimen/consent_item_link_icon_padding"
        android:src="@drawable/ic_link" />

</LinearLayout>